<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quoteCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/card_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/animeNameTextView"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/example"
            android:layout_marginBottom="4dp"
            android:textIsSelectable="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/animeCharacterTextView"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/example"
            android:textStyle="italic"
            android:textSize="24sp"
            android:textIsSelectable="true"
            tools:text="Madara" />

        <TextView
            android:id="@+id/animeQuoteTextView"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/example"
            android:textSize="16sp"
            android:textIsSelectable="true"
            tools:text="Thinking of peace whilst spilling blood is something that only humans could do." />


    </LinearLayout>


</LinearLayout>